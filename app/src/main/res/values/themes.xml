<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/AppWidget.AppActionBar</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="pstsIndicatorColor">?colorPrimary</item>
    </style>

    <style name="AppTheme.HomeAsUp">
        <item name="actionBarStyle">@style/AppWidget.AppActionBar.HomeAsUp</item>
    </style>

    <style name="AppWidget.AppActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/primary</item>
        <item name="backgroundStacked">@color/primary</item>
        <item name="backgroundSplit">@color/primary</item>
    </style>

    <style name="AppWidget.AppActionBar.HomeAsUp">
        <item name="displayOptions">showTitle|showHome|homeAsUp</item>
    </style>

</resources>