<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="pstsIndicatorColor">@color/main_color</item>
        <item name="android:actionBarStyle">@style/AppWidget.AppActionBar</item>
    </style>

    <style name="AppTheme.HomeAsUp">
        <item name="android:actionBarStyle">@style/AppWidget.AppActionBar.HomeAsUp</item>
    </style>

    <style name="AppWidget.AppActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/main_color</item>
        <item name="android:displayOptions">showTitle|showHome</item>
    </style>

    <style name="AppWidget.AppActionBar.HomeAsUp">
        <item name="android:displayOptions">showTitle|showHome|homeAsUp</item>
    </style>

</resources>